<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:padding="16dp"
    tools:context=".DetailsInput">

    <RelativeLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/myprimary">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/audiowide"
            android:text="INPUT DATA "
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/save_note_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_check_24"
            app:tint="@color/white" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar_layout"
        android:layout_above="@+id/delete_note_text_view_btn"
        android:fillViewport="true">
    <LinearLayout
        android:id="@+id/inputan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar_layout"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/awall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="Kilometer Awal Bulan"
            android:padding="13dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/bengsin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="BBM"
            android:padding="13dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/toll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="E-Toll"
            android:padding="13dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/parkir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="Parkir"
            android:padding="13dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/serviss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="Service and Maintenance"
            android:padding="13dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/akhirr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="Kilometer Akhir Bulan"
            android:padding="13dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="dd/yyyy"
            android:padding="13dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:inputType="date"/>
        <EditText
            android:id="@+id/bulan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:hint="Bulan"
            android:padding="13dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputan"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:padding="2dp">

            <RelativeLayout
                android:id="@+id/chooseImage"
                android:layout_width="130dp"
                android:layout_height="170dp"
                android:background="#D5ABAB">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/baseline_photo_camera_24" />
            </RelativeLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>

    <TextView
        android:id="@+id/delete_note_text_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/myprimary"
        android:gravity="center"
        android:text="Delete"
        android:textColor="@color/white"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>